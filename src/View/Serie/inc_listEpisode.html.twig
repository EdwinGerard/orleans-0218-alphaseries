<div class="d-inline-flex">
    <label class="switch">
        <input type="checkbox" id="checkAll" onclick="toggle(this);">
        <span class="slider round"></span>
    </label >
    <p class="mt-3 mb-0 ml-1">Tous vus</p>
</div>
{% for episode in episodes %}
    <li class="list-group-item bgt">
        <label class="switch">
            <input type="checkbox" class="toggles" id="{{ episode.id }}" name="hasSeen" {% if episode.hasSeen == 1 %}checked="checked"{% endif %} onclick="processForm(this)">
            <span class="slider round"></span>
        </label >
        {{ "E%02d" | format (episode.number) }} - {{ episode.title }}
        <div class="stars">
              {% for i in  1..5 %}
                  <span class="star">
                {% set classNote = (i<= episode.note ? "" : i - episode.note < 0.5 ? "-half-full" : "-o" ) %}
                      <i class="fa fa-lg fa-star fa-star{{ classNote }}" id="{{ episode.id }}" data-rating="{{ i }}" onclick="rating(this)"></i>
            </span>
              {% endfor %}
          </div>
    </li>
{% endfor %}
